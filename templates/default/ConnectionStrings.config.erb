<?xml version="1.0"?>
<connectionStrings>
  <% @config.each do |key,value| -%>
    <% if value.is_a?(Hash) %>
      <add name="<%= key %>" 
	<% value.each do |key1,value1| %>
	  <%= key1 %>="<%= value1 %>" 
	<% end %>
       />
    <% else %>
      <add name="<%= key %>" connectionString="<%= value %>" />
    <% end %>
  <% end -%>
</connectionStrings>